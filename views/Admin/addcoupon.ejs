<%-include("../partials/adminHeader")-%>
    <section class="content-main">

        <form action="/admin/addcoupon" method="post">

            <div class="row">
                <div class="col-12">
                    <div class="content-header">
                        <h2 class="content-title">Add New Coupon</h2>

                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card mb-4">
                        
                        <div class="card-body">
                           
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Coupon Title</label>
                                    <input type="text" name="title" placeholder="Type here" class="form-control"
                                        id="product_name" required>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">Coupon Description</label>
                                    <textarea type="text" name="description" placeholder="Type here"
                                        class="form-control" id="product_name"></textarea>
                                </div>

                                <div class="row">   
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Discount</label>
                                            <div class="row gx-2">
                                                <input placeholder="Enter discount" name="discount" type="text" class="form-control"
                                                    required>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Minimun Purchase</label>
                                            <div class="row gx-2">
                                                <input placeholder="Enter minimun purchase" name="minimum" type="text" class="form-control"
                                                    required>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">

                                            <label class="form-label">Expiry After </label>
                                            <input type="date" name="expiry" placeholder="Enter max time for expiration"
                                                class="form-control" id="product_expiry" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 mb-4" style="align-items: end; display: flex;">
                                        

                                            
                                                <button class="btn btn-md rounded font-sm hover-up"
                                                    type="submit">Create</button>
                                           
                                        

                                    </div>

                                </div>
                            


                        </div>
                    </div> <!-- card end// -->

                </div>
                <div class="col-lg-3">



                </div>
            </div>
        </form>
    </section> <!-- content-main end// -->
    <%-include("../partials/adminfooterr")-%>
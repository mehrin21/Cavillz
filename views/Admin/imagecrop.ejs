<script>
    $('#save_btn').on('click', function () {
        console.log("button")
        let left = $('#left_image').val()
        console.log(left)
        let top = $('#top_image').val()
        let right = $('#right_image').val()
        let bottom = $('#bottom_image').val()

        let width = $('#width').val()
        let height = $('#height_image').val()

        const data = {
            left: left,
            top: top,
            right: right,
            bottom: bottom,
            width: width,
            height: height
        }


        $.ajax({
            url: `/admin/imagecrop`,
            method: 'post',
            data: data,
            success: function (response) {
                if (response.message == 'image cropped') {
                    location.reload()
                }
            }
        })

    })
</script>


    function filterProducts() {
    const categoryCheckboxes = document.querySelectorAll('.category-checkbox:checked');
    const sizeCheckboxes = document.querySelectorAll('.size-checkbox:checked');
    const colorCheckboxes = document.querySelectorAll('.color-checkbox:checked');
    const brandCheckboxes = document.querySelectorAll('.brand-checkbox:checked');
    const mainCategoryCheckboxes = document.querySelectorAll('.category1-checkbox:checked');
  

    const selectedCategories = Array.from(categoryCheckboxes).map(checkbox => checkbox.id);
    const selectedSizes = Array.from(sizeCheckboxes).map(checkbox => checkbox.id);
    const selectedColors = Array.from(colorCheckboxes).map(checkbox => checkbox.id);
    const selectedBrands = Array.from(brandCheckboxes).map(checkbox => checkbox.id);
    const selectedMainCategories = Array.from(mainCategoryCheckboxes).map(checkbox => checkbox.id);

    const productItems = document.querySelectorAll('.product-item');

    productItems.forEach(item => {
        const category = item.dataset.category;
        const size = item.dataset.size;
        const color = item.dataset.color;
        const brand = item.dataset.brand;
        const mainCategory = item.dataset.category1;

        // Check if the item matches selected criteria
        const matchCategory = selectedCategories.length === 0 || selectedCategories.includes(category);
        const matchSize = selectedSizes.length === 0 || selectedSizes.includes(size);
        const matchColor = selectedColors.length === 0 || selectedColors.includes(color);
        const matchBrand = selectedBrands.length === 0 || selectedBrands.includes(brand);
        const matchMainCategory = selectedMainCategories.length === 0 || selectedMainCategories.includes(mainCategory);

        if (matchCategory && matchSize && matchColor && matchBrand && matchMainCategory) {
            item.style.display = 'block';
        } else {
            item.style.display = 'none';
        }
    });
}

            





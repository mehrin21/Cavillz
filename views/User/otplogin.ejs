    <script>
           // Get references to the input fields and the choice radio buttons
    const emailInput = document.getElementById('singin-email-2');
    const phoneInput = document.getElementById('singin-phone');
    const emailRadio = document.getElementById('choose-email');
    const phoneRadio = document.getElementById('choose-phone');

    // Function to show or hide input fields based on the choice
    function toggleFields() {
        if (emailRadio.checked) {
            emailInput.style.display = 'block';
            phoneInput.style.display = 'none';

        } else if (phoneRadio.checked) {
            emailInput.style.display = 'none';
            phoneInput.style.display = 'block';
        }
    }

    // Initial state
    toggleFields();

    // Add event listeners to the choice radio buttons
    emailRadio.addEventListener('change', toggleFields);
    phoneRadio.addEventListener('change', toggleFields);
    </script>
